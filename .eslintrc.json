{
  "extends": [
    "eslint-config-maasglobal-ts"
  ],
  "plugins":  [
    "markdown"
  ],
  "overrides": [
    {
      "files": ["src/readme.ts"],
      "rules": {
        "import/order": 0,
        "prettier/prettier": 0,
        "@typescript-eslint/consistent-type-definitions": 0
      }
    },
    {
      "files": ["**/*.md"],
      "processor": "markdown/markdown"
    },
    {
      "files": ["**/*.md/*.ts"],
      "rules": {
        "import/order": 0,
        "prettier/prettier": 0,
        "@typescript-eslint/consistent-type-definitions": 0
      }
    }
  ]
}
